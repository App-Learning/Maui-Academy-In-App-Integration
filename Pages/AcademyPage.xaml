<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAcademyApp.Pages.AcademyPage"
             Title="Academy">
    <Grid RowDefinitions="Auto,*" RowSpacing="0">
        <Border Padding="12" BackgroundColor="{StaticResource Gray100}">
            <VerticalStackLayout Spacing="6">
                <Label Text="JS Bridge"
                       FontAttributes="Bold"
                       FontSize="16" />
                <Label x:Name="LastMessageLabel"
                       Text="Waiting for web message..."
                       LineBreakMode="WordWrap"
                       MaxLines="3" />
            </VerticalStackLayout>
        </Border>

        <WebView x:Name="AcademyWebView"
                 Grid.Row="1"
                 Navigating="OnAcademyWebViewNavigating"
                 Navigated="OnAcademyWebViewNavigated" />
    </Grid>
</ContentPage>
